body
	font-family arial
	background gray
	color white
	text-align center
	font-size 16px

footer
	background orange
	padding 1em 0
	width 100%

header
	background orange
	color black
	padding 0.1em
	margin 0 0 0 0

li
	a
		border 1px solid red
		color white
		display block
		margin 0 0.5em
		padding 0.2em
		text-decoration none
.lol
	padding 240px
	border 1px solid black
	overflow hidden
	position relative
	
	.calculo
		background orange
		border 1px solid red
		border-radius 0 0 2em 2em
		display block
		height 10em
		left 8em
		position absolute
		top 12em
		width 60em

	.cargar
		background orange
		border 1px solid red
		border-radius 0 2em 0 2em
		display block
		height 10em
		position absolute
		left 8em
		top 10px 
		width 30em
	
	.mostrar
		align left
		background orange
		border 1px solid red
		border-radius 2em 0 2em 0
		display inline-block
		height 10em
		position absolute
		right 8em
		top 10px 
		width 30em

.message
	border dashed 1px red
	background #FFC6C7
	color black
	padding 10px
	text-align left
	margin 10px auto
	display none